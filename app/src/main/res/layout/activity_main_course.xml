<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    tools:context=".mainCourse">

    <TextView
        android:id="@+id/month"
        android:textColor="@color/white"
        android:layout_width="330dp"
        android:layout_height="135dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="40dp"
        android:text="TextView"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="TextView"
        android:textSize="15sp"
        android:layout_marginTop="80dp"
        android:paddingLeft="45dp"
         />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="TextView"
        android:textSize="15sp"
        android:layout_marginTop="38dp"
        android:paddingLeft="160dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/roundCardView"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_centerHorizontal="false"
        android:elevation="0dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/profile_spider" />
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/courseBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="200dp"
        android:paddingVertical="50dp"
        android:layout_marginTop="230dp"
        android:text="Button" />




    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_2"

        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="200dp"
        android:paddingVertical="25dp"
        android:layout_marginTop="230dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingHorizontal="50dp"
        android:layout_marginTop="235dp"
        android:text="Course" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:paddingHorizontal="50dp"
        android:layout_marginTop="255dp"
        android:text="Learn Java" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:paddingHorizontal="50dp"
        android:layout_marginTop="310dp"
        android:text="Boost yor skills with key concepts you haven't mastered yet\nor meed extra attention on." />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"

        android:layout_marginTop="350dp"
        android:src="@drawable/forward_arrow"
        app:iconTint="@color/black"
        />

    <ImageView
        android:layout_width="151dp"
        android:layout_height="236dp"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="230dp"
        android:paddingLeft="100dp"
        android:src="@drawable/forward_arrow" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="270dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/black"

        android:layout_marginTop="680dp"
        android:text="Log out"
        app:cornerRadius="10dp"
        android:background="@drawable/border"
        app:icon="@drawable/baseline_logout_24"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>