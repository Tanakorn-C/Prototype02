<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    tools:context=".courseSelection">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"

        android:paddingVertical="20dp"
        android:paddingHorizontal="167dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="50dp"
        android:text="" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:text="Course" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:paddingHorizontal="50dp"
        android:layout_marginTop="70dp"
        android:text="เรียน Java" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"

        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:text="Hello World" />

    <Button
        android:id="@+id/whatIsJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:paddingHorizontal="110dp"
        android:layout_marginLeft="28dp"
        android:gravity="center"
        android:layout_marginTop="178dp"
        android:text="Java คืออะไร" />

    <Button
        android:id="@+id/excerciseJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/whatIsJava"
        android:paddingHorizontal="120dp"
        android:layout_marginLeft="28dp"
        android:gravity="center"
        android:text="แบบฝึกหัด" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/excerciseJava"
        android:paddingHorizontal="115dp"
        android:layout_marginLeft="28dp"
        android:gravity="center"
        android:text="Cheatsheet" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/black"

        android:layout_marginTop="630dp"
        android:text="Back"
        app:cornerRadius="10dp"
        android:background="@drawable/border"
        app:icon="@drawable/baseline_keyboard_backspace_24"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>